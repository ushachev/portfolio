extends ../main.layout.pug

block variables
	-
		var title = 'Блог'

block scripts
	script(src='blog.bundle.js')

block start-section
	section.start
		.container.container_start
			header.header
				+nav('header', menuItems)
				+socials('', 'header__socials')(width='30' height='26')
				button(type='button').hamburger.hamburger_slider
					span.hamburger-box
						span.hamburger-inner
				//- button(type='button').hamburger-btn
				//- 	+icon('hamburger', 'hamburger-btn__icon')(width='40' height='35')
			.start__info.start__info_blog
				.author-foto
					+image('me_.jpg', 'Фото Виталий Ушачёв', 'author-foto__image')
				h1.title.start__title
					span.start__title-text Блог
					span.start__subtitle Статьи, которые я написал
			a(href='#next').start__link
				+icon('arrow_down', 'start__link-icon')(width='26' height='16')

block content
	section.blog
		.container.container_blog
			aside.blog__sidebar
				ul.post-menu
					-
						var postTitles = [[
							'Самое важное в SASS',
							'Приёмы в вёрстке, без которых не обходится ни один сайт',
							'Самый необходимый набор Gulp плагинов',
							'Почему я выбрал Jade'
						], 0]
					each title, ndx in postTitles[0]
						li.post-menu__item(class= (ndx === postTitles[1]) ? ' post-menu__item_active' : '')

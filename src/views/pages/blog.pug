extends ../main.layout.pug

block variables
	-
		var title = 'Блог'

block scripts
	script(src='blog.bundle.js')

block header
	header.header
		.container.container_header
			.header__top
				+socials('', 'header__socials')(width='30' height='26')
				button.hamburger-btn
					+icon('hamburger', 'hamburger-btn__icon')(width='40' height='35')
			.header__title.header__title_blog
				include ../common/author-foto.pug
				h1.title.header__title-page
					span.marked-title-text Блог
					span.header__subtitle Статьи, которые я написал
			a(href='#next').header__link
				+icon('arrow_down', 'header__link-icon')(width='26' height='16')

block content
	section.blog
		nav.blog__nav
				ul.post-menu
					-
						var postTitles = [[
							'Самое важное в SASS',
							'Приёмы в вёрстке, без которых не обходится ни один сайт',
							'Самый необходимый набор Gulp плагинов',
							'Почему я выбрал Jade'
						], 0]
					each title, ndx in postTitles[0]
						li.post-menu__item(class= (ndx === postTitles[1]) ? ' post-menu__item_active' : '')
							a(href='#').post-menu__link= title
		.container
			svg.blog__triangles-left(viewBox="0 0 600 110" preserveAspectRatio="none")
				polygon(points="0,0 0,110 600,110")
			svg.blog__triangles-right(viewBox="0 0 600 110" preserveAspectRatio="none")
				polygon(points="600,0 600,110 0,110")

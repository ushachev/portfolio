extends ../auth.layout.pug

block content
	h1.visually-hidden Виталий Ушачёв
		span Личный сайт веб разработчика
	button(type='button').auth-btn Авторизоваться
	.container-index
		.flip-wrapper
			.welcome
				include ../common/author.pug
				+socials('', 'welcome__socials')(width='30' height='26')
				-
					var menuItems = [
						{
							name: 'Мои работы',
							url: 'works.html'
						},{
							name: 'Обо мне',
							url: 'about.html'
						},{
							name: 'Блог',
							url: 'blog.html'
						}
					]
				+nav('welcome', menuItems)
			.login
				h1.subtitle.login__title
					span.login__title-text Авторизуйтесь
				form(action="#" method="post" id='login-form').login-form.login__form
					.login-form__input-row
						input(type='text' id='login' name="login" placeholder="Логин").login-form__input
						label(for='login').login-form__label-txt.login-form__label-txt_log Логин
					.login-form__input-row
						input(type='password' id='pwd' name="pwd" placeholder="Пароль").login-form__input
						label(for='pwd').login-form__label-txt.login-form__label-txt_pwd Пароль
					input(type="checkbox" id='human').login-form__check
					label(for='human').login-form__label-check Я человек
					fieldset.login-form__capcha
						legend.login-form__capcha-title Вы точно не робот?
						.login-form__label-wrap
							input(type="radio" id='yes' name='capcha' value='yes').login-form__radio
							label(for='yes').login-form__label-radio.login-form__label_left Да
							input(type="radio" id='no' name='capcha' value='no').login-form__radio
							label(for='no').login-form__label-radio Не уверен
					.login-form__btn-wrap
						button(type='button' id='index-btn').login-form__btn
							span.login-form__btn-text На главную
						button(type='submit').login-form__btn
							span.login-form__btn-text Войти
	small.copy © Виталий Ушачёв | создано с любовью в LoftSchool | 2018

extends ../main.layout.pug

block variables
	-
		var title = 'Мои работы'

block scripts
	script(src='works.bundle.js')

block start-section
	include ../common/start

block content
	section(id='prev').galery
		h1.title.galery__title
			span.galery__title-text Мои работы
		#galery-component
	section.reviews
		h2.title.reviews__title
			.marked-title.reviews__marked-title Что обо мне говорят
		ul.reviews__list
			li.reviews__item
				.review
					.text-content.review__content
						q Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!
					.review__author
						.review__author-foto
							+image('foto-rev1.jpg', 'Фото автора отзыва', 'review__image')
						.review__author-title
							.review__author-name Ковальчук Дмитрий
							.review__author-position основатель Loftschool
			li.reviews__item
				.review
					.text-content.review__content
						q Этот код выдержит любые испытания. Только пожалуйста, не загружается сайт на слишком старых браузерах!
					.review__author
						.review__author-foto
							+image('foto-rev2.jpg', 'Фото автора отзыва', 'review__image')
						.review__author-title
							.review__author-name Сабанцев Владимир
							.review__author-position преподаватель
		.reviews__form
			.reviews__form-bg
			.reviews__form-wrap
				h3.subtitle.reviews__form-title
						.marked-title Связаться со мной
				form(action="#" method="post" id='review-form' @submit.prevent="submitForm" novalidate="true").review-form
					transition(name="fade")
						.review-form__modal-wrap(v-if="showModal" @click="closeModal")
							.review-form__modal
								span.review-form__modal-text {{modalMessage}}
								button(type="button" @click="closeModal").review-form__modal-btn Закрыть
					label(for='name').review-form__label-txt
						span.visually-hidden Имя
						input(v-model.trim="parameters.name" type='text' id='name' name="name" placeholder="Имя" required).review-form__input-txt
					label(for='name').review-form__label-txt
						span.visually-hidden Email
						input(v-model="parameters.email" @focus="deleteErrorClass($event)" type='email' id='mail' name="mail" placeholder="Email" required).review-form__input-txt
						.tooltip Некорректный Email
					label(for='comment').visually-hidden Ваше сообщение
					textarea(id='comment' name="comment" placeholder="Ваше сообщение" v-model="parameters.feed" required).review-form__textarea
					.review-form__btn-wrap
						button(type='submit').review-form__btn
							span.review-form__btn-text Отправить
						button(type='reset').review-form__btn
							span.review-form__btn-text Очистить
		a(href='#start' id="page-to-top" @click.prevent="moveUp").reviews__link-up
			+icon('portf_arrow_up', 'reviews__link-icon')(width='26' height='16')

block footer
	include ../common/footer.pug

script(type="text/x-template")#skills-list
	ul.about__skills
		li.skills-row(v-for="skill in skills")
			skillsRow(
				:skill="skill"
			)


script(type="text/x-template")#skills-row
	.skills-row__wrapper
		div.skills-row__title {{skill.skillsGroup}}
		ul.skills-row__list
			li.skills-row__item(v-for="(skillPercents, skillName) in skill.skills")
				skill(
					:skillName="skillName"
					:skillPercents="skillPercents"
				)

script(type="text/x-template")#skill
	figure.skill
		svg(viewBox="0 0 100 100" preserveAspectRatio="none").skill__figure
			circle(cx="50" cy="50" r="40").skill__circle.skill__circle_under
			circle(cx="50" cy="50" r="40" ref="color-circle").skill__circle.skill__circle_above
		.skill__title {{ skillName }}
